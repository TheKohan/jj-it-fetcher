// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma-client"
  binaryTargets = ["native", "debian-openssl-1.1.x", "darwin-arm64", "linux-arm64-openssl-3.0.x", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model B2BOffer {
  id             Int         @id @default(autoincrement())
  createdAt      DateTime    @default(now())
  slug           String
  title          String
  url            String
  city           String
  fromPln        Float
  toPln          Float
  requiredSkills SearchTag[]
  companyName    String
  publishedAt    DateTime
}

model User {
  id           String        @id @unique
  createdAt    DateTime      @default(now())
  email        String        @unique
  notification Notification?
}

model Notification {
  createdAt           DateTime              @default(now())
  user                User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              String                @unique
  emailNotification   EmailNotification[]
  discordNotification DiscordNotification[]
}

model EmailNotification {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  email        String       @unique
  Notification Notification @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId       String
  tags         SearchTag[]
}

model DiscordNotification {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  webhookId    String       @unique
  Notification Notification @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId       String
  tags         SearchTag[]
}

model SearchTag {
  name                 String                @id @unique
  emailNotifications   EmailNotification[]
  discordNotifications DiscordNotification[]
  b2bOffers            B2BOffer[]
}
