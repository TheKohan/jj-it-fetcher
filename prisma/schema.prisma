// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma-client"
  binaryTargets = ["native", "debian-openssl-1.1.x", "darwin-arm64", "linux-arm64-openssl-3.0.x", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model B2BOffer {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  slug           String
  title          String
  url            String
  city           String
  fromPln        Float
  toPln          Float
  requiredSkills String
  companyName    String
}

model User {
  id            String         @id @unique
  createdAt     DateTime       @default(now())
  email         String         @unique
  notifications Notification[]
}

model Notification {
  id                        Int                         @id @default(autoincrement())
  createdAt                 DateTime                    @default(now())
  user                      User                        @relation(fields: [userId], references: [id])
  emailNotification         EmailNotification?
  discordNotification       DiscordNotification?
  userId                    String
  serachTagsOnNotifications SearchTagsOnNotifications[]
  emailNotificationId       Int
  discordNotificationId     Int
}

model EmailNotification {
  id             Int          @id @default(autoincrement())
  createdAt      DateTime     @default(now())
  email          String
  Notification   Notification @relation(fields: [notificationId], references: [id])
  notificationId Int          @unique
}

model DiscordNotification {
  id             Int          @id @default(autoincrement())
  createdAt      DateTime     @default(now())
  webhookId      String
  Notification   Notification @relation(fields: [notificationId], references: [id])
  notificationId Int          @unique
}

model SearchTag {
  id                        Int                         @id @default(autoincrement())
  name                      String                      @unique
  SearchTagsOnNotifications SearchTagsOnNotifications[]
}

model SearchTagsOnNotifications {
  id             Int          @id @default(autoincrement())
  searchTag      SearchTag    @relation(fields: [searchTagId], references: [id])
  notification   Notification @relation(fields: [notificationId], references: [id])
  searchTagId    Int
  notificationId Int
}
